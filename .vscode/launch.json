{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üêõ LLDB: Attach to Process on Device",
            "type": "lldb",
            "request": "attach",
            "program": "/Applications/YOUR_APP.app/YOUR_APP",
            "pid": "${command:pickProcess}",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "miDebuggerPath": "/usr/bin/lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "üî® Build: LiveContainer Dylib"
        },
        {
            "name": "üîç LLDB: Remote Debug via SSH",
            "type": "lldb",
            "request": "custom",
            "targetCreateCommands": [
                "target create ${workspaceFolder}/.theos/obj/debug/libDeviceIDSpoofer.dylib"
            ],
            "processCreateCommands": [
                "platform select remote-ios",
                "platform connect connect://DEVICE_IP:2222",
                "process attach --name SpringBoard"
            ]
        }
    ]
}
